<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    
    <Properties>
        <Property name="basePath">./logs</Property>
        <Property name="pattern">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
    </Properties>

    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${pattern}"/>
        </Console>

        <!-- File Appender with Rolling -->
        <RollingFile name="File" 
                    fileName="${basePath}/automation.log" 
                    filePattern="${basePath}/automation-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${pattern}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Selenium - Reduce noise -->
        <Logger name="org.openqa.selenium" level="WARN" additivity="false">
            <AppenderRef ref="File"/>
        </Logger>
        
        <!-- TestNG -->
        <Logger name="org.testng" level="INFO" additivity="false">
            <AppenderRef ref="File"/>
        </Logger>
        
        <!-- Your application packages -->
        <Logger name="testBase" level="DEBUG">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>
        
        <Logger name="pageObjects" level="INFO">
            <AppenderRef ref="File"/>
        </Logger>
        
        <Logger name="testCases" level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>

        <!-- Root Logger -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>

</Configuration>